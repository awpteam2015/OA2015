




@{
    ViewBag.Title = "Hd";
    Layout = "~/Views/Shared/_LayoutHandler.cshtml";
}

@section JavaScript{
    <script src="/Areas/HRManager/Scripts/MessageInfo/Hd.js?JsParamter=@SiteConfig.GetConfig().JsParamter"></script>
}
<div style="display: none">
    <input id="BindEntity" type="text" value="@ViewBag.BindEntity" />
    <input id="Command" type="hidden" />
</div>
<div class="mtable_div">
    <form id="form1">
        <table class="mtable">
            <tr>
                <td>
                    标题<span style="color: Red">*</span>:
                </td>
                <td>
                    <input id="MesTitle" name="MesTitle" type="text" style="width: 400px;" readonly="readonly" disabled="disabled"/>
                </td>
            </tr>

            <tr>
                <td>
                    内容<span style="color: Red">*</span>:
                </td>
                <td>
                    <textarea id="MesContent" name="MesContent" style="width:500px;height:150px;" readonly="readonly" disabled="disabled"></textarea>
                </td>
            </tr>
        </table>
    </form>
</div>
<div style="padding: 10px 10px 0 10px; text-align: center;">
    @if (Request["nullView"] != null)
    {
        if (Request["PkId"] == null || int.Parse(Request["PkId"]) == 0)
        {
            <a id="btnAdd" class="easyui-linkbutton" iconcls="icon-add" href="javascript:void(0)">新增</a>
        }
        else
        {
            <a id="btnEdit" class="easyui-linkbutton" iconcls="icon-ok" href="javascript:void(0)">编辑</a>
        }
    }
    <a id="btnClose" class="easyui-linkbutton" iconcls="icon-cancel" href="javascript:void(0)">关闭</a>
</div>
