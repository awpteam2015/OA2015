

  



@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}

@section JavaScript{
    <script src="/Areas/HRManager/Scripts/WorkExperience/List.js?JsParamter=@SiteConfig.GetConfig().JsParamter" type="text/javascript"></script>
}

<div title="员工工作经历记录" style="padding:1px;">
    <table id="datagrid" style="height:auto;" iconcls=".icon-save" singleselect="true"  toolbar="#tb" fit="true"></table>
    <div id="tb" style="padding:5px;height:auto">
        <div  style="margin-bottom: 5px">
            <a id="btnAdd" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true" >添加</a>
  
            <a id="btnDel" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-remove',plain:true" >删除</a>
           
            <a id="btnEdit" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-edit',plain:true" >编辑</a>
          
            <a id="btnRefresh" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-reload',plain:true" >刷新</a>
           
        </div>
      
        <div id="divSearch">
            <form>
            
             <table class="mtable">
            
              <tr>
            <td >
                :
            </td>
            <td >
                <input id="PkId" name="PkId"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                员工编号:
            </td>
            <td >
                <input id="EmployeeCode" name="EmployeeCode"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                所属部门:
            </td>
            <td >
                <input id="DepartmentCode" name="DepartmentCode"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                工作单位:
            </td>
            <td >
                <input id="WorkCompany" name="WorkCompany"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                职务:
            </td>
            <td >
                <input id="Duties" name="Duties"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                开始日期:
            </td>
            <td >
                <input id="BeginDate" name="BeginDate"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                结束日期:
            </td>
            <td >
                <input id="EndDate" name="EndDate"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                工作内容:
            </td>
            <td >
                <input id="WorkContent" name="WorkContent"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                离职原因:
            </td>
            <td >
                <input id="LeaveReason" name="LeaveReason"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                备注:
            </td>
            <td >
                <input id="Remark" name="Remark"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                操作人:
            </td>
            <td >
                <input id="CreatorUserCode" name="CreatorUserCode"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                操作人名称:
            </td>
            <td >
                <input id="CreatorUserName" name="CreatorUserName"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                创建时间:
            </td>
            <td >
                <input id="CreateTime" name="CreateTime"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                修改时间:
            </td>
            <td >
                <input id="LastModificationTime" name="LastModificationTime"  type="text"  />
            </td>
        </tr>
          <tr>
        <td colspan="2">   <a href="#" class="easyui-linkbutton" iconcls="icon-search" id="btnSearch">搜索</a>
        </td>
        </tr>
        </table>
            </form>
        </div>
    </div>
</div>





