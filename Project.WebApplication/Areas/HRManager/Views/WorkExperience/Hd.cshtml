

  


@{
    ViewBag.Title = "Hd";
    Layout = "~/Views/Shared/_LayoutHandler.cshtml";
}

@section JavaScript{
    <script src="/Areas/HRManager/Scripts/WorkExperience/Hd.js?JsParamter=@SiteConfig.GetConfig().JsParamter"></script>
}
<div style="display: none">
<input id="BindEntity" type="text" value="@ViewBag.BindEntity" />
<input id="Command" type="hidden" />
</div>
<div class="mtable_div">
    <form id="form1">
        <table class="mtable">
            
              <tr>
            <td  >
                <span style="color: Red">*</span>:
            </td>
            <td >
                <input id="PkId" name="PkId"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                员工编号<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="EmployeeCode" name="EmployeeCode"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                所属部门<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="DepartmentCode" name="DepartmentCode"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                工作单位<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="WorkCompany" name="WorkCompany"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                职务<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="Duties" name="Duties"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                开始日期<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="BeginDate" name="BeginDate"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                结束日期<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="EndDate" name="EndDate"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                工作内容<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="WorkContent" name="WorkContent"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                离职原因<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="LeaveReason" name="LeaveReason"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                备注<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="Remark" name="Remark"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                操作人<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="CreatorUserCode" name="CreatorUserCode"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                操作人名称<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="CreatorUserName" name="CreatorUserName"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                创建时间<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="CreateTime" name="CreateTime"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                修改时间<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="LastModificationTime" name="LastModificationTime"  type="text"  />
            </td>
        </tr>
          
        </table>
    </form>
</div>
<div style="padding: 10px 10px 0 10px; text-align: center;">
    @if (Request["PkId"]==null||int.Parse(Request["PkId"]) == 0)
    {
        <a id="btnAdd" class="easyui-linkbutton" iconcls="icon-add" href="javascript:void(0)">新增</a>
    }
    else
    {
        <a id="btnEdit" class="easyui-linkbutton" iconcls="icon-ok" href="javascript:void(0)">编辑</a>
    }
    <a id="btnClose" class="easyui-linkbutton" iconcls="icon-cancel" href="javascript:void(0)">关闭</a>
</div>





