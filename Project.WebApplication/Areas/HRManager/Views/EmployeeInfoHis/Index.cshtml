@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}
@section JavaScript{
    <script src="/Areas/HrManager/Scripts/EmployeeInfo/List.js?JsParamter=@SiteConfig.GetConfig().JsParamter" type="text/javascript"></script>
}
<div title="人员信息管理" style="padding:1px;">
    <table id="datagrid" style="height:auto;" iconcls=".icon-save" singleselect="true" toolbar="#tb" fit="true"></table>
    <div id="tb" style="padding:5px;height:auto">
        <div style="margin-bottom: 5px">
            <a id="btnView" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-search',plain:true">查看</a>
            <a id="btnHistory" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-filter',plain:true">历史记录</a>
            <a id="btnRefresh" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-reload',plain:true">刷新</a>
        </div>
        <div id="divSearch">
            <form>
                <table class="mtable">
                    <tr>
                        <td>
                            员工编号:
                        </td>
                        <td>
                            <input id="EmployeeCode" name="EmployeeCode" type="text" />
                        </td>
                        <td>
                            员工名称:
                        </td>
                        <td>
                            <input id="EmployeeName" name="EmployeeName" type="text" />
                        </td>
                        <td>
                            所属部门:
                        </td>
                        <td>
                            <input id="DepartmentCode" name="DepartmentCode" type="text" />
                        </td>
                        <td>
                            工号:
                        </td>
                        <td>
                            <input id="JobName" name="JobName" type="text" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            在职状态:
                        </td>
                        <td>
                            <input id="WorkState" name="WorkState" type="text" />
                        </td>
                        <td>
                            员工类型:
                        </td>
                        <td>
                            <input id="EmployeeType" name="EmployeeType" type="text" />
                        </td>
                        <td>
                            <a href="#" class="easyui-linkbutton" iconcls="icon-search" id="btnSearch">搜索</a>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>


