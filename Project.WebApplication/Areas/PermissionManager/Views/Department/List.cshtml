@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}

@section JavaScript{
    <script src="/Areas/PermissionManager/Scripts/Department/List.js?JsParamter=@SiteConfig.GetConfig().JsParamter" type="text/javascript"></script>
}

<div title="部门列表" style="padding:1px;">
    <table id="datagrid" style="height:auto;" iconcls=".icon-save" singleselect="true"  toolbar="#tb" fit="true"></table>
    <div id="tb" style="padding:5px;height:auto">
        <div>
            <a id="btnAdd" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true" style="float: left;">添加</a>
            <div class="datagrid-btn-separator" style="height: 15px; margin: 7px 2px 0;"></div>
            <a id="btnDel" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-remove',plain:true" style="float: left;">删除</a>
            <div class="datagrid-btn-separator" style="height: 15px; margin: 7px 2px 0;"></div>
            <a id="btnEdit" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-edit',plain:true" style="float: left;">编辑</a>
            <div class="datagrid-btn-separator" style="height: 15px; margin: 7px 2px 0;"></div>
            <a id="btnRefresh" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-reload',plain:true" style="float: left;">刷新</a>
            <div style=" clear:both;"></div>
        </div>
        <hr style="height:1px;border:none;border-top:1px solid #CCCCCC; padding:0; margin:0; border-collapse:collapse; margin:2px 0;" />
        <div id="divSearch">
            <form>
                <table class="mtable">

                    <tr>
                        <td style="width: 100px">
                            部门编码:
                        </td>
                        <td style="width: 100px">
                            <input id="DepartmentCode" name="DepartmentCode" type="text" />
                        </td>
                  
                        <td style="width: 100px">
                            部门名称:
                        </td>
                        <td style="width: 100px">
                            <input id="DepartmentName" name="DepartmentName" type="text" />
                        </td>
                  
                        <td >
                            <a href="#" class="easyui-linkbutton" iconcls="icon-search" id="btnSearch">搜索</a>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>





