

  



@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}

@section JavaScript{
    <script src="/Areas/PermissionManager/Scripts/Module/List.js" type="text/javascript"></script>
}

<div title="权限模块" style="padding:1px;">
    <table id="datagrid" style="height:auto;" iconcls=".icon-save" singleselect="true" idfield="id" toolbar="#tb" fit="true"></table>
    <div id="tb" style="padding:5px;height:auto">
        <div  style="margin-bottom: 5px">
            <a id="btnAdd" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true" >添加</a>
  
            <a id="btnDel" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-remove',plain:true" >删除</a>
           
            <a id="btnEdit" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-edit',plain:true" >编辑</a>
          
            <a id="btnRefresh" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-reload',plain:true" >刷新</a>
           
        </div>
      
        <div id="divSearch">
            <form>
            
             <table class="mtable">
            
              <tr>
            <td >
                ID
            </td>
            <td >
                <input id="PkId" name="PkId"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                模块名称
            </td>
            <td >
                <input id="ModuleName" name="ModuleName"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                父级 预留
            </td>
            <td >
                <input id="ParentId" name="ParentId"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                层级
            </td>
            <td >
                <input id="ModuleLevel" name="ModuleLevel"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                排序
            </td>
            <td >
                <input id="RankId" name="RankId"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td >
                备注
            </td>
            <td >
                <input id="Remark" name="Remark"  type="text"  />
            </td>
        </tr>
          <tr>
        <td>   <a href="#" class="easyui-linkbutton" iconcls="icon-search" id="btnSearch">搜索</a>
        </td>
        </tr>
        </table>
            </form>
        </div>
    </div>
</div>





